<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WallopSceneEditor.Plugins.SettingTypeGuiProviders.StringControl">

	<Panel>
		<TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" IsVisible="{Binding Readonly}" Text="{Binding Text}"></TextBlock>
		<TextBox VerticalAlignment="Center" HorizontalAlignment="Stretch" MaxLength="{Binding MaxLength}" IsVisible="{Binding !Readonly}" Text="{Binding Text, Mode=TwoWay}"></TextBox>
	</Panel>
</UserControl>
