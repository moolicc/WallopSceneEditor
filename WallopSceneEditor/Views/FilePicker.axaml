<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
			 Design.Width="200"
             x:Class="WallopSceneEditor.Views.FilePicker">

	<Panel>

		<TextBox HorizontalAlignment="Stretch" Margin="0,0,83,0" Watermark="{Binding Watermark}" Text="{Binding SelectedFile, Mode=TwoWay}"></TextBox>
		<Button HorizontalAlignment="Right" Margin="4,0,0,0" HorizontalContentAlignment="Center" Width="75" Click="BrowseClicked">Browse</Button>
				
	</Panel>
</UserControl>
